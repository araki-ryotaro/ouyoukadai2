<div class='container px-5 px-sm-0'>
  <div class='row'>
    <h2>Follow Users</h2>
    <% if @users.exists? %>
      <% @users.each do |user| %>
      <table class='table'>
        <tr>
          <th>name</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
        <tr>
          <td><%= user.name %></td>
          <td>フォロー数: <%= user.followings.count %></td>
          <td>フォロワー数: <%= user.followers.count %></td>
          <td><%= link_to "Show", user %></td>
        </tr>
      </table>
      <% end %>
    <% else %>
    <table class='table'>
      <tr>
        <td>ユーザーはいません</td>
      </tr>
    </table>
    <% end %>
  </div>
</div>